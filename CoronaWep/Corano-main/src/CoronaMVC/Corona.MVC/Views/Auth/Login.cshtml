@using Corona.MVC.ViewModel.Auth
@model AuthViewModel
@{
    Layout = "_Layout";
}



<main>
    <!-- breadcrumb area start -->
    <div class="breadcrumb-area">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="breadcrumb-wrap">
                        <nav aria-label="breadcrumb">
                            <ul class="breadcrumb">
                                <li class="breadcrumb-item"><a href="index.html"><i class="fa fa-home"></i></a></li>
                                <li class="breadcrumb-item active" aria-current="page">login-Register</li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- breadcrumb area end -->
    <!-- login register wrapper start -->
    <div class="login-register-wrapper section-padding">
        <div class="container">
            <div class="member-area-from-wrap">
                <div class="row">
                    <!-- Login Content Start -->
                    <div class="col-lg-6">
                        <div class="login-reg-form-wrap">
                            <h5>Sign In</h5>
                            <form method="post" asp-action="Login">
                                <div class="single-input-item">
                                    <input asp-for="LoginViewModel.UsernameOrEmail" type="email" placeholder="Email or Username" required />
                                    <span asp-validation-for="LoginViewModel.UsernameOrEmail" class="text-danger"></span>
                                </div>
                                <div class="single-input-item">
                                    <input asp-for="LoginViewModel.password" type="password" placeholder="Enter your Password" required />
                                    <span asp-validation-for="LoginViewModel.password" class="text-danger"></span>
                                </div>
                                <div class="single-input-item">
                                    <div class="login-reg-form-meta d-flex align-items-center justify-content-between">
                                        <div class="remember-meta">
                                            <div class="custom-control custom-checkbox">
                                                <input type="checkbox" class="custom-control-input" id="rememberMe">
                                                <label class="custom-control-label" for="rememberMe">Remember Me</label>
                                            </div>
                                        </div>
                                        <a href="#" class="forget-pwd">Forget Password?</a>
                                    </div>
                                </div>
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="single-input-item">
                                    <button type="submit" class="btn btn-sqr">Login</button>
                                </div>
                            </form>
                        </div>
                    </div>
                    <!-- Login Content End -->
                    <!-- Register Content Start -->
                    <div class="col-lg-6">
                        <div class="login-reg-form-wrap sign-up-form">
                            <h5>Singup Form</h5>
                            <form method="post" asp-action="register">
                                <div class="single-input-item">
                                    <input asp-for="RegisterViewModel.Fullname" type="text" placeholder="Full Name" required />
                                </div>
                                <div class="single-input-item">
                                    <input asp-for="RegisterViewModel.Username" type="text" placeholder="Username" required />
                                </div>
                                <div class="single-input-item">
                                    <input asp-for="RegisterViewModel.Email" type="email" placeholder="Enter your Email" required />
                                </div>
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="single-input-item">
                                            <input asp-for="RegisterViewModel.password" type="password" placeholder="Enter your Password" required />
                                        </div>
                                    </div>
                                </div>
                                <div class="single-input-item">
                                    <div class="login-reg-form-meta">
                                        <div class="remember-meta">
                                            <div class="custom-control custom-checkbox">
                                                <input type="checkbox" class="custom-control-input" id="subnewsletter">
                                                <label class="custom-control-label" for="subnewsletter">
                                                    Subscribe
                                                    Our Newsletter
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="single-input-item">
                                    <button type="submit" class="btn btn-sqr">Register</button>
                                </div>
                            </form>
                        </div>
                    </div>
                    <!-- Register Content End -->
                </div>
            </div>
        </div>
    </div>
    <!-- login register wrapper end -->
</main>

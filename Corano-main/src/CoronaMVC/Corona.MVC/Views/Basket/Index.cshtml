@using Corona.MVC.ViewModel.Basket
@model BasketResultViewModel


<main>
    <!-- breadcrumb area start -->
    <div class="breadcrumb-area">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="breadcrumb-wrap">
                        <nav aria-label="breadcrumb">
                            <ul class="breadcrumb">
                                <li class="breadcrumb-item"><a href="index.html"><i class="fa fa-home"></i></a></li>
                                <li class="breadcrumb-item"><a href="shop.html">shop</a></li>
                                <li class="breadcrumb-item active" aria-current="page">cart</li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- breadcrumb area end -->
    <!-- cart main wrapper start -->
    <div class="cart-main-wrapper section-padding">
        <div class="container">
            <div class="section-bg-color">
                <div class="row">
                    <div class="col-lg-12">
                        <!-- Cart Table Area -->
                        <div class="cart-table table-responsive">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th class="pro-thumbnail">Thumbnail</th>
                                        <th class="pro-title">Product</th>
                                        <th class="pro-price">Price</th>
                                        <th class="pro-quantity">Quantity</th>
                                        <th class="pro-subtotal">Total</th>
                                        <th class="pro-remove">Remove</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <!-- HTML Kısmı -->
                                    @foreach (var item in Model.GetBasketProductDto)
                                    {
                                        <tr>
                                            <td class="pro-thumbnail"><a asp-controller="Shop" asp-action="ProductDetails" asp-route-id="@item.ProductId"><img class="img-fluid" src="@item.ImageUrl" alt="Product" /></a></td>
                                            <td class="pro-title"><a asp-controller="Shop" asp-action="ProductDetails" asp-route-id="@item.ProductId">@item.ProductTitle</a></td>
                                            <td class="pro-price"><span>$@(item.Price / item.Count)</span></td>
                                            <td class="pro-quantity">
                                                <div class="pro-qty" data-product-id="@item.ProductId" data-basket-id="@item.BasketId">
                                                    <span class="dec qtybtn">-</span>
                                                    <input type="text" value="@item.Count">
                                                    <span class="inc qtybtn">+</span>
                                                </div>
                                            </td>
                                            <td class="pro-subtotal"><span>$@item.Price</span></td>
                                            <td class="pro-remove">
                                                <a href="#" class="remove-item" data-product-id="@item.ProductId" data-basket-id="@item.BasketId"><i class="fa fa-trash-o"></i></a>
                                            </td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                        <!-- Cart Update Option -->
                        <div class="cart-update-option d-block d-md-flex justify-content-between">
                            <div class="apply-coupon-wrapper">
                            </div>
                            <div class="cart-update">
                                <a href="#" class="btn btn-sqr">Update Cart</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-5 ml-auto">
                        <!-- Cart Calculation Area -->
                        <div class="cart-calculator-wrapper">
                            <div class="cart-calculate-items">
                                <h6>Cart Totals</h6>
                                <div class="table-responsive">
                                    <table class="table">
                                        <tr class="total">
                                            <td>Total</td>
                                            <td class="total-amount">$@Model.TotalPrice</td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                            <a href="checkout.html" class="btn btn-sqr d-block">Proceed Checkout</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- cart main wrapper end -->
</main>


<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        // Ürün kaldırma olayı
        $('.remove-item').on('click', function (e) {
            e.preventDefault();

            var productId = $(this).data('product-id');
            var basketId = $(this).data('basket-id');

            $.ajax({
                url: 'https://localhost:7295/api/BasketProducts/UpdateBasketProduct',
                method: 'PUT',
                data: {
                    ProductId: productId,
                    BasketId: basketId,
                    Count: 0
                },
                success: function (response) {
                    location.reload(); // Sayfayı yeniden yükleme
                },
                error: function (xhr, status, error) {
                    console.error('Ürün kaldırma işlemi başarısız:', error);
                }
            });
        });

        // Adet artırma ve azaltma olayları
        $('.pro-qty .qtybtn').on('click', function () {
            var $button = $(this);
            var $input = $button.siblings('input');
            var oldValue = parseInt($input.val());
            var newVal = oldValue;

            if ($button.hasClass('inc')) {
                newVal = oldValue + 1;
            } else if ($button.hasClass('dec')) {
                newVal = oldValue > 0 ? oldValue - 1 : 0;
            }


            $input.val(newVal);

            var productId = $button.closest('.pro-qty').data('product-id');
            var basketId = $button.closest('.pro-qty').data('basket-id');

            $.ajax({
                url: 'https://localhost:7295/api/BasketProducts/UpdateBasketProduct',
                method: 'PUT',
                data: {
                    ProductId: productId,
                    BasketId: basketId,
                    Count: newVal
                },
                success: function (response) {
                    location.reload(); // Sayfayı yeniden yükleme
                },
                error: function (xhr, status, error) {
                    console.error('Adet güncelleme işlemi başarısız:', error);
                }
            });
        });

        // Adet değiştiğinde istek gönderme
        $('.pro-qty input').on('change', function () {
            var $input = $(this);
            var newVal = parseInt($input.val());
            var productId = $input.closest('.pro-qty').data('product-id');
            var basketId = $input.closest('.pro-qty').data('basket-id');

            $.ajax({
                url: 'https://localhost:7295/api/BasketProducts/UpdateBasketProduct',
                method: 'PUT',
                data: {
                    ProductId: productId,
                    BasketId: basketId,
                    Count: newVal
                },
                success: function (response) {
                    location.reload(); // Sayfayı yeniden yükleme
                },
                error: function (xhr, status, error) {
                    console.error('Adet güncelleme işlemi başarısız:', error);
                }
            });
        });
    });
</script>

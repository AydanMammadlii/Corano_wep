@using Corona.Domain.Entities
@model List<AppUser>
@{
    int a = 1;
}


<div class="col-lg-12">
    <div class="white_card card_height_100 mb_30">
        <div class="white_card_header">
            <div class="box_header m-0">
                <div class="main-title">
                    <h3 class="m-0">Category</h3>
                </div>
            </div>
        </div>
        <div class="white_card_body">
            <h6 style="display: flex; justify-content: space-between; align-items: center" class="card-subtitle mb_20">
                <a>All Admin</a>
                <a asp-action="Index">To All Members</a>
            </h6>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Username</th>
                            <th scope="col">Full Name</th>
                            <th scope="col">Change Member Role</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th scope="row">@(a++)</th>
                                <td>@item.UserName</td>
                                <td>@item.Fullname</td>
                                <td>
                                    <button type="button" class="btn to-admin-btn" data-user-id="@item.Id" style="background: none; border: none; font-size: 18px; color: greenyellow; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;">
                                        To Member
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $('.to-admin-btn').on('click', function () {
            var userId = $(this).data('user-id');
            var formData = {
                superAdminId: '@ViewBag.SuperAdmin',
                appUserId: userId
            };

            $.ajax({
                type: 'POST',
                url: 'https://localhost:7295/api/Auth/AdminDelete',
                data: JSON.stringify(formData),
                contentType: 'application/json',
                success: function () {
                    window.location.href = 'https://localhost:7186/Admin/Admin/IndexAllAdmin';
                },
                error: function () {
                    window.location.href = 'https://localhost:7186/Admin/Admin';
                }
            });
        });
    });
</script>

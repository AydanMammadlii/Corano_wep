@using Corona.MVC.ViewModel.Category
@model CategoryViewModel

@{
    ViewData["Title"] = "Update Category";
}

<h1>Update Category</h1>

<form id="updateForm" enctype="multipart/form-data">
    <input asp-for="Id" type="hidden" />
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
    </div>
    <select class="form-control" id="BrandId" asp-for="BrandId">
        @foreach (var item in ViewBag.brands)
        {
            <option value="@item.Id">@item.Title</option>
        }
    </select>

    <button type="submit" class="btn btn-primary">Update</button>
</form>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $('#updateForm').on('submit', function (event) {
            event.preventDefault();

            var formData = new FormData(this);
            $.ajax({
                url: 'https://localhost:7295/api/Categorys/UpdateCategory',
                type: 'PUT',
                data: formData,
                contentType: false,
                processData: false,
                success: function (data) {
                    window.location.href = 'https://localhost:7186/Admin/category';
                },
                error: function () {
                    alert('Error updating category.');
                }
            });
        });
    });
</script>
